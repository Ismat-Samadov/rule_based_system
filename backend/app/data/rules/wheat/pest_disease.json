{
  "version": "1.0.0",
  "category": "pest_disease",
  "farm_type": "wheat",
  "description": "Buğda zərərverici və xəstəlik qaydaları",
  "last_updated": "2025-12-26",
  
  "rules": [
    {
      "rule_id": "WHT_PEST_001",
      "name_az": "Pas xəstəliyi riski - Yüksək",
      "name_en": "Rust disease risk - High",
      "priority": "high",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "weather.temperature", "operator": ">=", "value": 15},
          {"field": "weather.temperature", "operator": "<=", "value": 25},
          {"field": "weather.humidity", "operator": ">", "value": 80},
          {"field": "crop_context.stage", "operator": "IN", "value": ["tillering", "stem_extension", "heading"]}
        ]
      },
      "action": {
        "type": "apply_fungicide",
        "urgency": "high",
        "urgency_score": 85,
        "timing_az": "Dərhal, səhər şeh quruduqdan sonra",
        "products": [
          {"name": "Propiconazole", "dose_ml_per_ha": 500},
          {"name": "Tebuconazole", "dose_ml_per_ha": 400}
        ],
        "repeat_interval_days": 14
      },
      "message_az": "Pas xəstəliyi riski YÜKSƏK. Temperatur {temperature}°C və rütubət {humidity}% - pas üçün ideal şərait. Dərhal fungisid çiləyin.",
      "message_en": "Rust disease risk HIGH. Temperature {temperature}°C and humidity {humidity}% - ideal conditions for rust.",
      "symptoms_az": [
        "Yarpaqlarda sarı-narıncı tozlu ləkələr",
        "Ləkələr ovulduqda əldə pas rəngi qalır",
        "Gövdə və sünbüldə də ola bilər"
      ],
      "prevention_az": [
        "Davamlı sortlar seçin",
        "Bitki qalıqlarını təmizləyin",
        "Həddən artıq sıx əkindən qaçının"
      ]
    },
    {
      "rule_id": "WHT_PEST_002",
      "name_az": "Pas xəstəliyi riski - Orta",
      "name_en": "Rust disease risk - Medium",
      "priority": "medium",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "weather.temperature", "operator": ">=", "value": 15},
          {"field": "weather.temperature", "operator": "<=", "value": 25},
          {"field": "weather.humidity", "operator": ">", "value": 70},
          {"field": "weather.humidity", "operator": "<=", "value": 80},
          {"field": "crop_context.stage", "operator": "IN", "value": ["tillering", "stem_extension", "heading"]}
        ]
      },
      "action": {
        "type": "monitor",
        "urgency": "medium",
        "urgency_score": 55,
        "timing_az": "Hər 2-3 gündən bir yoxlama"
      },
      "message_az": "Pas xəstəliyi riski ORTA. Yarpaqlarda sarı-narıncı ləkələr yoxlayın. Simptom görünsə dərhal fungisid tətbiq edin.",
      "message_en": "Rust disease risk MEDIUM. Check leaves for yellow-orange spots. Apply fungicide if symptoms appear."
    },
    {
      "rule_id": "WHT_PEST_003",
      "name_az": "Mənənə (Aphid) hücumu riski",
      "name_en": "Aphid infestation risk",
      "priority": "medium",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "weather.temperature", "operator": ">", "value": 20},
          {"field": "weather.humidity", "operator": ">=", "value": 40},
          {"field": "weather.humidity", "operator": "<=", "value": 70},
          {"field": "crop_context.stage", "operator": "IN", "value": ["stem_extension", "heading", "grain_filling"]}
        ]
      },
      "action": {
        "type": "monitor",
        "urgency": "medium",
        "urgency_score": 50,
        "timing_az": "Hər 3-4 gündən bir yoxlama",
        "threshold_for_treatment": "Hər sünbüldə 5+ mənənə"
      },
      "message_az": "Mənənə riski var. Sünbül və yarpaqlarda yoxlama aparın. Hər sünbüldə 5-dən çox mənənə olduqda müdaxilə edin.",
      "message_en": "Aphid risk present. Inspect heads and leaves. Treat if more than 5 aphids per head."
    },
    {
      "rule_id": "WHT_PEST_004",
      "name_az": "Mənənə - Müdaxilə həddi aşıldı",
      "name_en": "Aphid - Treatment threshold exceeded",
      "priority": "high",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.aphid_count_per_head", "operator": ">=", "value": 5},
          {"field": "crop_context.stage", "operator": "IN", "value": ["heading", "grain_filling"]}
        ]
      },
      "action": {
        "type": "apply_insecticide",
        "urgency": "high",
        "urgency_score": 75,
        "timing_az": "Səhər tezdən və ya axşam (arılar üçün təhlükəni azaltmaq üçün)",
        "products": [
          {"name": "İmidakloprid", "dose_ml_per_ha": 200},
          {"name": "Tiametoksam", "dose_ml_per_ha": 150}
        ],
        "warning_az": "Arılar üçün təhlükəli - çiçəklənmə vaxtı istifadə etməyin"
      },
      "message_az": "Mənənə sayı müdaxilə həddini aşıb. İnsektisid çiləyin. Arıları qorumaq üçün səhər/axşam tətbiq edin.",
      "message_en": "Aphid count exceeded treatment threshold. Apply insecticide early morning or evening to protect bees."
    },
    {
      "rule_id": "WHT_PEST_005",
      "name_az": "Sürmə xəstəliyi xəbərdarlığı",
      "name_en": "Smut disease warning",
      "priority": "info",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.stage", "operator": "==", "value": "germination"},
          {"field": "crop_context.seed_treated", "operator": "!=", "value": true}
        ]
      },
      "action": {
        "type": "preventive_alert",
        "urgency": "info",
        "urgency_score": 30
      },
      "message_az": "Xəbərdarlıq: Toxum dərmanlanmayıbsa, sürmə xəstəliyi riski var. Növbəti mövsüm üçün Karboksil və ya Tiram əsaslı toxum dərmanı istifadə edin.",
      "message_en": "Warning: If seeds are not treated, smut disease risk exists. Use Carboxin or Thiram-based seed treatment next season.",
      "prevention_az": [
        "Sertifikatlı, dərmanlanmış toxum istifadə edin",
        "Əkin öncəsi toxum dərmanlaması",
        "Xəstəlikli sahədən toxum saxlamayın"
      ]
    },
    {
      "rule_id": "WHT_PEST_006",
      "name_az": "Unlu şeh riski",
      "name_en": "Powdery mildew risk",
      "priority": "medium",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "weather.temperature", "operator": ">=", "value": 15},
          {"field": "weather.temperature", "operator": "<=", "value": 22},
          {"field": "weather.humidity", "operator": ">", "value": 70},
          {"field": "crop_context.stage", "operator": "IN", "value": ["tillering", "stem_extension"]}
        ]
      },
      "action": {
        "type": "monitor",
        "urgency": "medium",
        "urgency_score": 50,
        "timing_az": "Həftəlik yoxlama",
        "treatment_if_found": {
          "products": ["Kükürd əsaslı fungisid", "Triadimefon"],
          "timing_az": "Simptomlar görünən kimi"
        }
      },
      "message_az": "Unlu şeh riski var. Yarpaqlarda ağ unlu örtük yoxlayın.",
      "message_en": "Powdery mildew risk present. Check leaves for white powdery coating.",
      "symptoms_az": [
        "Yarpaqlarda ağ unlu örtük",
        "Əvvəlcə alt yarpaqlardan başlayır",
        "Ciddi hallarda yarpaq quruyur"
      ]
    },
    {
      "rule_id": "WHT_PEST_007",
      "name_az": "Taxıl böcəyi (Zabrus) xəbərdarlığı",
      "name_en": "Ground beetle warning",
      "priority": "medium",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.stage", "operator": "IN", "value": ["germination", "tillering"]},
          {"field": "farm_profile.region", "operator": "IN", "value": ["aran", "ganja_gazakh"]}
        ]
      },
      "action": {
        "type": "monitor",
        "urgency": "medium",
        "urgency_score": 45,
        "timing_az": "Gecə yoxlama (fənərlə)"
      },
      "message_az": "Aran və Gəncə-Qazax bölgələrində taxıl böcəyi (Zabrus) aktiv ola bilər. Gecə yoxlama aparın - böcəklər gecə fəaliyyət göstərir.",
      "message_en": "Ground beetle may be active in Aran and Ganja-Gazakh regions. Conduct night inspection.",
      "symptoms_az": [
        "Cavan bitkilərin yarpaqları kəsik",
        "Bitkilər çəkilmiş görünür",
        "Torpaqda böcək izləri"
      ]
    }
  ],
  
