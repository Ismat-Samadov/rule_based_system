{
  "version": "1.0.0",
  "category": "fertilization",
  "farm_type": "wheat",
  "description": "Buğda gübrələmə qaydaları",
  "last_updated": "2025-12-26",
  
  "rules": [
    {
      "rule_id": "WHT_FERT_001",
      "name_az": "Əkin öncəsi əsas gübrələmə",
      "name_en": "Pre-planting base fertilization",
      "priority": "high",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.stage", "operator": "==", "value": "pre_planting"},
          {"field": "crop_context.days_since_fertilization", "operator": ">", "value": 180}
        ]
      },
      "action": {
        "type": "fertilize",
        "urgency": "high",
        "urgency_score": 80,
        "timing_az": "Əkindən 7-10 gün əvvəl",
        "fertilizer": {
          "type": "NPK 15-15-15",
          "amount_kg_per_ha": {"min": 200, "max": 250},
          "method_az": "Torpağa qarışdırmaqla"
        }
      },
      "message_az": "Əkin öncəsi gübrələmə vaxtıdır. NPK 15-15-15 gübrəsindən hektara 200-250 kq tövsiyə olunur.",
      "message_en": "Pre-planting fertilization time. NPK 15-15-15, 200-250 kg/ha recommended.",
      "reasoning_az": "Əsas gübrələmə torpaqda qida maddələri ehtiyatı yaradır."
    },
    {
      "rule_id": "WHT_FERT_002",
      "name_az": "Kollanma dövrü azot gübrəsi",
      "name_en": "Tillering nitrogen application",
      "priority": "high",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.stage", "operator": "==", "value": "tillering"},
          {"field": "crop_context.days_in_stage", "operator": ">=", "value": 10},
          {"field": "crop_context.days_since_fertilization", "operator": ">", "value": 20}
        ]
      },
      "action": {
        "type": "fertilize",
        "urgency": "high",
        "urgency_score": 85,
        "timing_az": "Kollanma başlayandan 10-15 gün sonra, suvarma öncəsi",
        "fertilizer": {
          "options": [
            {"type": "Ammonium Nitrat", "amount_kg_per_ha": {"min": 150, "max": 200}},
            {"type": "Karbamid (Urea)", "amount_kg_per_ha": {"min": 100, "max": 130}}
          ],
          "method_az": "Səpələmə, suvarma öncəsi"
        }
      },
      "message_az": "Kollanma dövrü azot gübrələməsi vaxtıdır. Gövdə sayını artırmaq üçün kritikdir. Ammonium Nitrat (150-200 kq/ha) və ya Karbamid (100-130 kq/ha) tövsiyə olunur.",
      "message_en": "Tillering nitrogen application time. Critical for tiller count.",
      "reasoning_az": "Kollanma mərhələsində azot çatışmazlığı gövdə sayını və nəticədə məhsuldarlığı ciddi azaldır."
    },
    {
      "rule_id": "WHT_FERT_003",
      "name_az": "Gövdə uzanması dövrü gübrələmə",
      "name_en": "Stem extension fertilization",
      "priority": "medium",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.stage", "operator": "==", "value": "stem_extension"},
          {"field": "crop_context.days_since_fertilization", "operator": ">", "value": 21}
        ]
      },
      "action": {
        "type": "fertilize",
        "urgency": "medium",
        "urgency_score": 60,
        "timing_az": "Gövdə uzanması dövrünün ortası",
        "fertilizer": {
          "type": "Karbamid",
          "amount_kg_per_ha": {"min": 50, "max": 70},
          "method_az": "Yarpaq gübrəsi və ya torpağa"
        }
      },
      "message_az": "Son gübrələmədən {days_since_fertilization} gün keçib. Gövdə uzanması dövründə əlavə azot tövsiyə olunur.",
      "message_en": "{days_since_fertilization} days since fertilization. Additional nitrogen recommended during stem extension."
    },
    {
      "rule_id": "WHT_FERT_004",
      "name_az": "Sünbülləmə öncəsi yarpaq gübrəsi",
      "name_en": "Pre-heading foliar fertilization",
      "priority": "medium",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.stage", "operator": "==", "value": "stem_extension"},
          {"field": "crop_context.days_in_stage", "operator": ">=", "value": 15}
        ]
      },
      "action": {
        "type": "fertilize",
        "urgency": "medium",
        "urgency_score": 55,
        "timing_az": "Sünbülləmədən 7-10 gün əvvəl",
        "fertilizer": {
          "type": "Yarpaq gübrəsi",
          "components": ["Karbamid 2%", "Sink sulfat 0.5%", "Bor 0.2%"],
          "method_az": "Çiləmə, səhər və ya axşam"
        }
      },
      "message_az": "Sünbülləmə öncəsi yarpaq gübrəsi tövsiyə olunur. Mikroelementlər (Sink, Bor) dən keyfiyyətini yaxşılaşdırır.",
      "message_en": "Pre-heading foliar fertilization recommended. Micronutrients improve grain quality."
    },
    {
      "rule_id": "WHT_FERT_005",
      "name_az": "Dən dolması - Gübrələmə dayandırma",
      "name_en": "Grain filling - Stop fertilization",
      "priority": "info",
      "enabled": true,
      "conditions": {
        "operator": "OR",
        "items": [
          {"field": "crop_context.stage", "operator": "==", "value": "grain_filling"},
          {"field": "crop_context.stage", "operator": "==", "value": "maturity"}
        ]
      },
      "action": {
        "type": "no_action",
        "urgency": "info",
        "urgency_score": 10
      },
      "message_az": "Bu mərhələdə gübrələmə tövsiyə olunmur. Dən dolması və yetişmə dövründə əlavə gübrə keyfiyyəti aşağı sala bilər.",
      "message_en": "Fertilization not recommended at this stage. Additional fertilizer during grain filling may reduce quality."
    },
    {
      "rule_id": "WHT_FERT_006",
      "name_az": "Azot çatışmazlığı əlamətləri",
      "name_en": "Nitrogen deficiency symptoms",
      "priority": "high",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.stage", "operator": "IN", "value": ["tillering", "stem_extension"]},
          {"field": "crop_context.nitrogen_deficiency_signs", "operator": "==", "value": true}
        ]
      },
      "action": {
        "type": "fertilize",
        "urgency": "high",
        "urgency_score": 80,
        "timing_az": "Dərhal",
        "fertilizer": {
          "type": "Karbamid yarpaq gübrəsi",
          "concentration": "2-3%",
          "method_az": "Yarpaq çiləmə"
        }
      },
      "message_az": "Azot çatışmazlığı əlamətləri müşahidə olunur (sarı yarpaqlama, zəif böyümə). Dərhal yarpaq gübrəsi tövsiyə olunur.",
      "message_en": "Nitrogen deficiency symptoms observed. Immediate foliar application recommended.",
      "deficiency_signs_az": [
        "Alt yarpaqların saralması",
        "Ümumi solğun yaşıl rəng",
        "Zəif kollanma",
        "Ləngimiş böyümə"
      ]
    }
  ],
  
  "fertilizer_products": {
    "npk_15_15_15": {
      "name_az": "NPK 15-15-15",
      "composition": {"N": 15, "P": 15, "K": 15},
      "usage_az": "Əsas gübrə, əkin öncəsi",
      "price_range_azn_per_kg": {"min": 0.8, "max": 1.2}
    },
    "ammonium_nitrate": {
      "name_az": "Ammonium Nitrat",
      "composition": {"N": 34},
      "usage_az": "Azot mənbəyi, kollanma dövrü",
      "price_range_azn_per_kg": {"min": 0.6, "max": 0.9}
    },
    "urea": {
      "name_az": "Karbamid (Urea)",
      "composition": {"N": 46},
      "usage_az": "Azot mənbəyi, yarpaq gübrəsi",
      "price_range_azn_per_kg": {"min": 0.5, "max": 0.8}
    },
    "zinc_sulfate": {
      "name_az": "Sink sulfat",
      "composition": {"Zn": 23},
      "usage_az": "Mikroelement, yarpaq gübrəsi",
      "price_range_azn_per_kg": {"min": 3, "max": 5}
    }
  }
}
