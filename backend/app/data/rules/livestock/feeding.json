{
  "version": "1.0.0",
  "category": "feeding",
  "farm_type": "livestock",
  "description": "Heyvandarlıq yemləmə qaydaları",
  "last_updated": "2025-12-26",
  
  "rules": [
    {
      "rule_id": "LVS_FEED_001",
      "name_az": "İstilik stressi yemləmə tənzimləməsi",
      "name_en": "Heat stress feeding adjustment",
      "priority": "high",
      "enabled": true,
      "conditions": {
        "operator": "OR",
        "items": [
          {"field": "weather.temperature", "operator": ">", "value": 30},
          {
            "operator": "AND",
            "items": [
              {"field": "weather.temperature", "operator": ">", "value": 28},
              {"field": "weather.humidity", "operator": ">", "value": 70}
            ]
          }
        ]
      },
      "action": {
        "type": "adjust_feeding",
        "urgency": "high",
        "urgency_score": 75,
        "adjustments_by_animal": {
          "cattle": {
            "feed_reduction_percent": 20,
            "water_increase_percent": 50,
            "timing_change_az": "Səhər (06:00) və axşam (20:00) yemlənmə",
            "additional_az": ["Mineral əlavələr (Na, K)", "Keyfiyyətli, həzm olunması asan yemlər"]
          },
          "sheep": {
            "feed_reduction_percent": 15,
            "timing_change_az": "Günorta otlatma dayandırılmalı",
            "additional_az": ["Səhər tezdən (05:00-09:00) otlatma", "Axşam gec (18:00-21:00) otlatma"]
          },
          "goat": {
            "feed_reduction_percent": 10,
            "timing_change_az": "Günorta sığınacaqda saxlayın",
            "additional_az": ["Sərbəst su girişi"]
          },
          "poultry": {
            "feed_reduction_note_az": "Quşlar özləri az yeyəcək - normaldır",
            "water_change_az": "Sərin su təmin edin",
            "additional_az": ["Elektrolit əlavəsi", "Səhər tezdən (05:00-07:00) yemlənmə"]
          }
        }
      },
      "message_az": "İstilik stressi şəraiti. Temperatur {temperature}°C, rütubət {humidity}%. Yemləmə rejimini dəyişin.",
      "message_en": "Heat stress conditions. Temperature {temperature}°C, humidity {humidity}%. Adjust feeding regime."
    },
    {
      "rule_id": "LVS_FEED_002",
      "name_az": "Soyuq hava yemləmə tənzimləməsi",
      "name_en": "Cold weather feeding adjustment",
      "priority": "medium",
      "enabled": true,
      "conditions": {
        "operator": "OR",
        "items": [
          {"field": "weather.temperature", "operator": "<", "value": 5},
          {
            "operator": "AND",
            "items": [
              {"field": "weather.temperature", "operator": "<", "value": 10},
              {"field": "weather.wind_speed", "operator": ">", "value": 20}
            ]
          }
        ]
      },
      "action": {
        "type": "adjust_feeding",
        "urgency": "medium",
        "urgency_score": 60,
        "adjustments_by_animal": {
          "cattle": {
            "feed_increase_percent": 15,
            "additional_az": ["Enerji tərkibli yemlər (arpa, qarğıdalı)", "Ilıq su təmin edin"]
          },
          "sheep": {
            "feed_increase_percent": 15,
            "additional_az": ["Ot rasionunu artırın", "Konsentrat əlavə edin", "Sığınacaq təmin edin"]
          },
          "goat": {
            "feed_increase_percent": 10,
            "additional_az": ["Sığınacaq təmin edin"]
          }
        }
      },
      "message_az": "Soyuq hava şəraiti. Temperatur {temperature}°C. Yem normasını artırın, ilıq su təmin edin.",
      "message_en": "Cold weather conditions. Temperature {temperature}°C. Increase feed ration, provide warm water."
    },
    {
      "rule_id": "LVS_FEED_003",
      "name_az": "Laktasiya dövrü yemləmə - Süd inəkləri",
      "name_en": "Lactation period feeding - Dairy cattle",
      "priority": "high",
      "enabled": true,
      "applicable_to": ["dairy_cattle"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "livestock_context.animal_type", "operator": "==", "value": "cattle"},
          {"field": "livestock_context.lactation_stage", "operator": "==", "value": "early"}
        ]
      },
      "action": {
        "type": "feeding_recommendation",
        "urgency": "high",
        "urgency_score": 70,
        "recommendations_az": [
          "Yüksək enerjili rasion",
          "Protein: 16-18%",
          "Konsentrat:kobud yem nisbəti: 60:40",
          "Ad libitum (sərbəst) yem girişi"
        ]
      },
      "message_az": "Erkən laktasiya dövrü - enerji tələbi yüksəkdir. Protein və enerji balansına diqqət edin.",
      "message_en": "Early lactation period - high energy demand. Pay attention to protein and energy balance."
    },
    {
      "rule_id": "LVS_FEED_004",
      "name_az": "Quru dövr yemləmə - Süd inəkləri",
      "name_en": "Dry period feeding - Dairy cattle",
      "priority": "medium",
      "enabled": true,
      "applicable_to": ["dairy_cattle"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "livestock_context.animal_type", "operator": "==", "value": "cattle"},
          {"field": "livestock_context.lactation_stage", "operator": "==", "value": "dry"}
        ]
      },
      "action": {
        "type": "feeding_recommendation",
        "urgency": "medium",
        "urgency_score": 55,
        "recommendations_az": [
          "Yem miqdarını azaldın",
          "Kobud yem üstünlük təşkil etməlidir",
          "Kalsium səviyyəsini azaldın (süd qızdırmasının qarşısının alınması üçün)",
          "Doğumdan 3 həftə əvvəl tədricən konsentratı artırın"
        ]
      },
      "message_az": "Quru dövr - enerji ehtiyacı aşağıdır. Doğuma hazırlıq üçün son 3 həftədə rasion dəyişin.",
      "message_en": "Dry period - lower energy requirement. Change ration in last 3 weeks for calving preparation."
    },
    {
      "rule_id": "LVS_FEED_005",
      "name_az": "Boğazlıq dövrü - Qoyun",
      "name_en": "Gestation period - Sheep",
      "priority": "high",
      "enabled": true,
      "applicable_to": ["sheep"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "livestock_context.animal_type", "operator": "==", "value": "sheep"},
          {"field": "livestock_context.reproductive_stage", "operator": "==", "value": "late_gestation"}
        ]
      },
      "action": {
        "type": "feeding_recommendation",
        "urgency": "high",
        "urgency_score": 75,
        "recommendations_az": [
          "Son 6 həftədə yemi 30-50% artırın",
          "Keyfiyyətli ot + konsentrat",
          "İkizlikdə daha çox yem artımı",
          "Mineral/vitamin əlavəsi"
        ]
      },
      "message_az": "Gec boğazlıq dövrü - quzunun 70%-i bu dövrdə böyüyür. Yemləməni ciddi şəkildə artırın!",
      "message_en": "Late gestation - 70% of lamb growth occurs now. Significantly increase feeding!"
    },
    {
      "rule_id": "LVS_FEED_006",
      "name_az": "Cücə böyütmə dövrü yemləmə - Quşçuluq",
      "name_en": "Brooding period feeding - Poultry",
      "priority": "high",
      "enabled": true,
      "applicable_to": ["poultry"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "livestock_context.animal_type", "operator": "==", "value": "poultry"},
          {"field": "livestock_context.age_days", "operator": "<=", "value": 21}
        ]
      },
      "action": {
        "type": "feeding_recommendation",
        "urgency": "high",
        "urgency_score": 80,
        "recommendations_az": [
          "Starter yem (21-23% protein)",
          "7/24 yem və su girişi",
          "Temperatur: ilk həftə 32-35°C",
          "Hər həftə 3°C azaldın"
        ]
      },
      "message_az": "Cücə böyütmə dövrü - kritik dövrdür. Yüksək proteinli starter yem və fasiləsiz giriş təmin edin.",
      "message_en": "Brooding period - critical phase. Provide high protein starter feed and continuous access."
    },
    {
      "rule_id": "LVS_FEED_007",
      "name_az": "Su çatışmazlığı xəbərdarlığı",
      "name_en": "Water shortage warning",
      "priority": "critical",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "livestock_context.water_availability", "operator": "==", "value": "limited"}
        ]
      },
      "action": {
        "type": "critical_alert",
        "urgency": "critical",
        "urgency_score": 100,
        "immediate_actions_az": [
          "Su mənbəyi tapın/artırın",
          "Heyvan sayını azaldın (satış)",
          "Su qənaəti tədbirləri",
          "Yemləməni azaldın (susuz həzm olmaz)"
        ]
      },
      "message_az": "KRİTİK: Su çatışmazlığı! Heyvanlar susuz qala bilməz. Dərhal tədbirlər görün.",
      "message_en": "CRITICAL: Water shortage! Animals cannot survive without water. Take immediate action.",
      "water_requirements": {
        "cattle_liters_per_day": {"min": 40, "max": 100, "note_az": "Temperatur və laktasiyadan asılı"},
        "sheep_liters_per_day": {"min": 4, "max": 8},
        "goat_liters_per_day": {"min": 4, "max": 8},
        "poultry_ml_per_bird_per_day": {"min": 150, "max": 300}
      }
    }
  ],
  
