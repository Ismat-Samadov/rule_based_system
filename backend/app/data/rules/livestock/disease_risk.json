  "thi_calculator": {
    "formula": "THI = (1.8 × T + 32) − (0.55 − 0.0055 × RH) × (1.8 × T − 26)",
    "where": {"T": "temperature (°C)", "RH": "relative humidity (%)"},
    "thresholds": {
      "comfortable": {"max": 68, "description_az": "Rahat"},
      "mild_stress": {"min": 68, "max": 72, "description_az": "Yüngül stress"},
      "moderate_stress": {"min": 72, "max": 79, "description_az": "Orta stress"},
      "severe_stress": {"min": 79, "max": 89, "description_az": "Ciddi stress"},
      "danger": {"min": 89, "description_az": "Təhlükəli"}
    }
