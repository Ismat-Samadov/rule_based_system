      "name_az": "Mastit riski - Yüksək (Süd inəkləri)",
      "name_en": "Mastitis risk - High (Dairy cattle)",
      "priority": "critical",
      "enabled": true,
      "applicable_to": ["dairy_cattle"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "livestock_context.animal_type", "operator": "==", "value": "cattle"},
          {"field": "weather.humidity", "operator": ">", "value": 85},
          {"field": "livestock_context.barn_hygiene_score", "operator": "<", "value": 5}
        ]
      },
      "action": {
        "type": "veterinary_alert",
        "urgency": "critical",
        "urgency_score": 95,
        "timing_az": "Dərhal",
