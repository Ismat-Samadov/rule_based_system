{
  "version": "1.0.0",
  "category": "veterinary",
  "farm_type": "livestock",
  "description": "Heyvandarlıq baytar xidmətləri qaydaları",
  "last_updated": "2025-12-26",
  
  "rules": [
    {
      "rule_id": "LVS_VET_001",
      "name_az": "Peyvənd vaxtı - Mal-qara",
      "name_en": "Vaccination due - Cattle",
      "priority": "high",
      "enabled": true,
      "applicable_to": ["cattle"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "livestock_context.animal_type", "operator": "==", "value": "cattle"},
          {"field": "livestock_context.vaccination_status", "operator": "IN", "value": ["due", "overdue"]}
        ]
      },
      "action": {
        "type": "vaccination_reminder",
        "urgency": "high",
        "urgency_score": 85
      },
      "message_az": "Peyvənd vaxtı yetişib. Baytar ilə əlaqə saxlayın.",
      "message_en": "Vaccination due. Contact veterinarian."
    },
    {
      "rule_id": "LVS_VET_002",
      "name_az": "Peyvənd vaxtı - Qoyun",
      "name_en": "Vaccination due - Sheep",
      "priority": "high",
      "enabled": true,
      "applicable_to": ["sheep"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "livestock_context.animal_type", "operator": "==", "value": "sheep"},
          {"field": "livestock_context.vaccination_status", "operator": "IN", "value": ["due", "overdue"]}
        ]
      },
      "action": {
        "type": "vaccination_reminder",
        "urgency": "high",
        "urgency_score": 85
      },
      "message_az": "Qoyunlar üçün peyvənd vaxtıdır.",
      "message_en": "Vaccination due for sheep."
    },
    {
      "rule_id": "LVS_VET_003",
      "name_az": "Peyvənd vaxtı - Quşçuluq",
      "name_en": "Vaccination due - Poultry",
      "priority": "critical",
      "enabled": true,
      "applicable_to": ["poultry"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "livestock_context.animal_type", "operator": "==", "value": "poultry"},
          {"field": "livestock_context.vaccination_status", "operator": "IN", "value": ["due", "overdue"]}
        ]
      },
      "action": {
        "type": "vaccination_reminder",
        "urgency": "critical",
        "urgency_score": 95
      },
      "message_az": "Quşlar üçün peyvənd KRİTİKdir!",
      "message_en": "Vaccination CRITICAL for poultry!"
    },
    {
      "rule_id": "LVS_VET_004",
      "name_az": "Müntəzəm baytar yoxlaması - Süd inəkləri",
      "name_en": "Routine vet check - Dairy cattle",
      "priority": "medium",
      "enabled": true,
      "applicable_to": ["dairy_cattle"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "livestock_context.animal_type", "operator": "==", "value": "cattle"},
          {"field": "livestock_context.days_since_vet_check", "operator": ">", "value": 30}
        ]
      },
      "action": {
        "type": "vet_checkup_reminder",
        "urgency": "medium",
        "urgency_score": 55
      },
      "message_az": "Son baytar yoxlamasından {days_since_vet_check} gün keçib. Aylıq yoxlama tövsiyə olunur.",
      "message_en": "{days_since_vet_check} days since last vet check."
    },
    {
      "rule_id": "LVS_VET_005",
      "name_az": "Müntəzəm baytar yoxlaması - Qoyun/Keçi",
      "name_en": "Routine vet check - Sheep/Goat",
      "priority": "medium",
      "enabled": true,
      "applicable_to": ["sheep", "goat"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "livestock_context.animal_type", "operator": "IN", "value": ["sheep", "goat"]},
          {"field": "livestock_context.days_since_vet_check", "operator": ">", "value": 60}
        ]
      },
      "action": {
        "type": "vet_checkup_reminder",
        "urgency": "medium",
        "urgency_score": 50
      },
      "message_az": "Son baytar yoxlamasından {days_since_vet_check} gün keçib.",
      "message_en": "{days_since_vet_check} days since last vet check."
    },
    {
      "rule_id": "LVS_VET_006",
      "name_az": "Müntəzəm sürü yoxlaması - Quşçuluq",
      "name_en": "Routine flock check - Poultry",
      "priority": "medium",
      "enabled": true,
      "applicable_to": ["poultry"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "livestock_context.animal_type", "operator": "==", "value": "poultry"},
          {"field": "livestock_context.days_since_vet_check", "operator": ">", "value": 90}
        ]
      },
      "action": {
        "type": "vet_checkup_reminder",
        "urgency": "medium",
        "urgency_score": 50
      },
      "message_az": "Son sürü yoxlamasından {days_since_vet_check} gün keçib. Rüblik yoxlama tövsiyə olunur.",
      "message_en": "{days_since_vet_check} days since flock check. Quarterly checkup recommended."
    },
    {
      "rule_id": "LVS_VET_007",
      "name_az": "Dərmanlanma vaxtı - Parazit",
      "name_en": "Deworming due",
      "priority": "high",
      "enabled": true,
      "applicable_to": ["cattle", "sheep", "goat"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "livestock_context.animal_type", "operator": "IN", "value": ["cattle", "sheep", "goat"]},
          {"field": "livestock_context.days_since_deworming", "operator": ">", "value": 90}
        ]
      },
      "action": {
        "type": "deworming_reminder",
        "urgency": "high",
        "urgency_score": 75,
        "products_az": ["Albendazol", "İvermektin", "Fenbendazol"]
      },
      "message_az": "Son parazit dərmanlamasından {days_since_deworming} gün keçib. Dərmanlanma tövsiyə olunur.",
      "message_en": "{days_since_deworming} days since last deworming. Treatment recommended."
    },
    {
      "rule_id": "LVS_VET_008",
      "name_az": "Doğum yaxınlaşır - Hazırlıq",
      "name_en": "Calving/Lambing approaching",
      "priority": "high",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "livestock_context.days_until_expected_birth", "operator": "<=", "value": 14},
          {"field": "livestock_context.days_until_expected_birth", "operator": ">", "value": 0}
        ]
      },
      "action": {
        "type": "birth_preparation",
        "urgency": "high",
        "urgency_score": 80,
        "preparation_items_az": [
          "Doğum yerini hazırlayın (təmiz, quru)",
          "Baytar əlaqə məlumatlarını yoxlayın",
          "Doğum dəstini hazırlayın",
          "Kolostrum (ağız südü) ehtiyatı",
          "Gecə nəzarətini planlaşdırın"
        ]
      },
      "message_az": "Doğuma təxminən {days_until_expected_birth} gün qalıb. Hazırlıqlara başlayın!",
      "message_en": "Approximately {days_until_expected_birth} days until expected birth. Start preparations!"
    }
  ],
  
  "vaccination_schedules": {
    "cattle": [
      {"name": "Şap xəstəliyi (FMD)", "frequency": "6 ayda bir"},
      {"name": "Brusellyoz", "frequency": "İllik"},
      {"name": "Qarayara (Anthrax)", "frequency": "İllik, yazda"},
      {"name": "Clostridial", "frequency": "İllik"}
    ],
    "sheep": [
      {"name": "Enterotoksemiya", "frequency": "İllik, quzulamadan 4-6 həftə əvvəl"},
      {"name": "Şap xəstəliyi", "frequency": "6 ayda bir"},
      {"name": "Bradzot", "frequency": "İllik"}
    ],
    "poultry": [
      {"name": "Marek", "age_days": 1},
      {"name": "Newcastle", "age_days": [7, 21, 35], "then": "3 ayda bir"},
      {"name": "Gumboro", "age_days": [14, 24]},
      {"name": "İnfeksion bronxit", "age_days": [7, 21]}
    ]
  },
  
  "emergency_contacts_template": {
    "note_az": "Fermer öz regional baytar məlumatlarını daxil etməlidir",
    "fields": ["baytar_adi", "telefon", "adres", "is_saatlari", "tecili_telefon"]
  }
}
