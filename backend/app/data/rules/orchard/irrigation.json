{
  "version": "1.0.0",
  "category": "irrigation",
  "farm_type": "orchard",
  "description": "Meyvə bağı suvarma qaydaları",
  "last_updated": "2025-12-26",
  
  "rules": [
    {
      "rule_id": "ORCH_IRR_001",
      "name_az": "Çiçəkləmə dövrü suvarma - Ehtiyatlı",
      "name_en": "Flowering period irrigation - Careful",
      "priority": "high",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.stage", "operator": "==", "value": "flowering"},
          {"field": "soil.soil_moisture", "operator": "<", "value": 50}
        ]
      },
      "action": {
        "type": "irrigate",
        "urgency": "high",
        "urgency_score": 75,
        "timing_az": "Səhər erkən",
        "amount_percent_of_normal": 70,
        "warnings_az": [
          "HƏDDƏN ARTIQ SUVARMAYIN - çiçək tökülməsinə səbəb ola bilər",
          "Sel suvarmasından qaçının",
          "Torpaq nəmliyini 50-60% arasında saxlayın"
        ]
      },
      "message_az": "Çiçəkləmə dövrüdür. Suvarma ehtiyatla - həddən artıq su çiçək tökülməsinə səbəb olur. Normal normanın 70%-i kifayətdir.",
      "message_en": "Flowering period. Irrigate carefully - excess water causes flower drop. 70% of normal rate sufficient."
    },
    {
      "rule_id": "ORCH_IRR_002",
      "name_az": "Meyvə inkişafı dövrü suvarma",
      "name_en": "Fruit development irrigation",
      "priority": "high",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.stage", "operator": "==", "value": "fruit_development"},
          {"field": "soil.soil_moisture", "operator": "<", "value": 60}
        ]
      },
      "action": {
        "type": "irrigate",
        "urgency": "high",
        "urgency_score": 80,
        "timing_az": "Həftədə 1-2 dəfə dərin suvarma",
        "target_moisture": 70
      },
      "message_az": "Meyvə inkişaf dövrü. Müntəzəm suvarma vacibdir - qeyri-müntəzəmlik meyvə çatlamasına səbəb olur.",
      "message_en": "Fruit development period. Regular irrigation essential - irregularity causes fruit cracking."
    },
    {
      "rule_id": "ORCH_IRR_003",
      "name_az": "Üzüm - Veraison dövrü suvarma azaltma",
      "name_en": "Grape - Veraison irrigation reduction",
      "priority": "high",
      "enabled": true,
      "applicable_to": ["grape"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.crop_type", "operator": "==", "value": "grape"},
          {"field": "crop_context.stage", "operator": "==", "value": "veraison"}
        ]
      },
      "action": {
        "type": "reduce_irrigation",
        "urgency": "high",
        "urgency_score": 70,
        "reduction_percent": 50,
        "exceptions_az": ["Temperatur 38°C-dən yuxarı olarsa minimal stres suvarması icazəli"]
      },
      "message_az": "Veraison dövrü - suvarmanı 50% azaldın. Bu şəkər konsentrasiyasını artırır və üzüm keyfiyyətini yaxşılaşdırır.",
      "message_en": "Veraison period - reduce irrigation by 50%. This increases sugar concentration and improves grape quality."
    },
    {
      "rule_id": "ORCH_IRR_004",
      "name_az": "Nar - Müntəzəm suvarma (Çatlama qarşısı)",
      "name_en": "Pomegranate - Regular irrigation (Crack prevention)",
      "priority": "critical",
      "enabled": true,
      "applicable_to": ["pomegranate"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.crop_type", "operator": "==", "value": "pomegranate"},
          {"field": "crop_context.stage", "operator": "==", "value": "fruit_development"},
          {"field": "crop_context.days_since_irrigation", "operator": ">", "value": 5}
        ]
      },
      "action": {
        "type": "irrigate",
        "urgency": "critical",
        "urgency_score": 90,
        "timing_az": "DƏRHAL - qeyri-müntəzəm suvarma meyvə çatlamasına səbəb olur!"
      },
      "message_az": "XƏBƏRDARLIQ: Son suvarmadan {days_since_irrigation} gün keçib. Narda qeyri-müntəzəm suvarma MƏHSULu ÇATLADIR!",
      "message_en": "WARNING: {days_since_irrigation} days since last irrigation. Irregular irrigation CRACKS pomegranate fruit!"
    },
    {
      "rule_id": "ORCH_IRR_005",
      "name_az": "Yığım öncəsi suvarma azaltma",
      "name_en": "Pre-harvest irrigation reduction",
      "priority": "medium",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.stage", "operator": "==", "value": "harvest"},
          {"field": "crop_context.days_until_harvest", "operator": "<=", "value": 14}
        ]
      },
      "action": {
        "type": "reduce_irrigation",
        "urgency": "medium",
        "urgency_score": 55,
        "reduction_percent": 30,
        "note_az": "Şəkər konsentrasiyası və saxlama keyfiyyəti üçün"
      },
      "message_az": "Yığıma {days_until_harvest} gün qalıb. Suvarmanı 30% azaldın - meyvə keyfiyyəti və saxlama müddəti artacaq.",
      "message_en": "{days_until_harvest} days until harvest. Reduce irrigation by 30% for better quality and storage life."
    },
    {
      "rule_id": "ORCH_IRR_006",
      "name_az": "Kritik temperatur suvarması - Meyvə bağı",
      "name_en": "Critical temperature irrigation - Orchard",
      "priority": "critical",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "weather.temperature", "operator": ">", "value": 35},
          {"field": "crop_context.stage", "operator": "IN", "value": ["fruit_set", "fruit_development"]}
        ]
      },
      "action": {
        "type": "irrigate",
        "urgency": "critical",
        "urgency_score": 95,
        "timing_az": "Səhər tezdən (06:00 əvvəl) və ya axşam (19:00 sonra)",
        "additional_az": ["Kölgələndirmə şəbəkəsi düşünün", "Mulçalama tətbiq edin"]
      },
      "message_az": "KRİTİK İSTİLİK: Temperatur {temperature}°C. Meyvə yanığı riski var. Dərhal suvarın, kölgələndirmə düşünün.",
      "message_en": "CRITICAL HEAT: Temperature {temperature}°C. Fruit sunburn risk. Irrigate immediately, consider shading."
    },
    {
      "rule_id": "ORCH_IRR_007",
      "name_az": "Qış yuxusu dövrü - Minimal suvarma",
      "name_en": "Dormancy period - Minimal irrigation",
      "priority": "low",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.stage", "operator": "==", "value": "dormancy"}
        ]
      },
      "action": {
        "type": "minimal_irrigation",
        "urgency": "low",
        "urgency_score": 20,
        "frequency_az": "Ayda 1-2 dəfə (torpaq tam qurumamaq şərtilə)"
      },
      "message_az": "Qış yuxusu dövrü. Minimal suvarma kifayətdir - torpaq tam qurumasın.",
      "message_en": "Dormancy period. Minimal irrigation sufficient - soil should not dry out completely."
    }
  ],
  
  "crop_specific_notes": {
    "apple": {
      "critical_period_az": "Çiçəkləmə və meyvə böyüməsi",
      "pre_harvest_reduction_days": 14
    },
    "grape": {
      "critical_period_az": "Çiçəkləmə, gilə böyüməsi, veraison",
      "veraison_note_az": "Veraison-da su stressi keyfiyyəti artırır"
    },
    "pomegranate": {
      "critical_period_az": "Meyvə böyüməsi (çatlama riski!)",
      "note_az": "Qeyri-müntəzəm suvarma ən böyük problemdir"
    },
    "fig": {
      "note_az": "Həddən artıq suvarma meyvə dadını azaldır"
    }
  }
}
