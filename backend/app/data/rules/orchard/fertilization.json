{
  "version": "1.0.0",
  "category": "fertilization",
  "farm_type": "orchard",
  "description": "Meyvə bağı gübrələmə qaydaları",
  "last_updated": "2025-12-26",
  
  "rules": [
    {
      "rule_id": "ORCH_FERT_001",
      "name_az": "Yaz əsas gübrələmə",
      "name_en": "Spring base fertilization",
      "priority": "high",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.stage", "operator": "==", "value": "bud_break"},
          {"field": "soil.soil_temperature", "operator": ">", "value": 10}
        ]
      },
      "action": {
        "type": "fertilize",
        "urgency": "high",
        "urgency_score": 80,
        "timing_az": "Tumurcuqlanmadan 2-3 həftə əvvəl",
        "fertilizers_by_crop": {
          "apple": {"type": "NPK 12-12-17", "amount_kg_per_ha": 350},
          "grape": {"type": "NPK 10-10-10", "amount_kg_per_ha": 250},
          "pomegranate": {"type": "NPK 15-15-15", "amount_kg_per_ha": 225},
          "fig": {"type": "Kompost + NPK 10-10-10", "amount_kg_per_ha": 150}
        },
        "method_az": "Tac proyeksiyası altına səpmə"
      },
      "message_az": "Yaz gübrələmə vaxtı. {crop_type} üçün əsas gübrələmə tövsiyə olunur.",
      "message_en": "Spring fertilization time. Base fertilization recommended for {crop_type}."
    },
    {
      "rule_id": "ORCH_FERT_002",
      "name_az": "Meyvə bağlanmasından sonra gübrələmə",
      "name_en": "Post fruit-set fertilization",
      "priority": "medium",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.stage", "operator": "==", "value": "fruit_set"},
          {"field": "crop_context.days_in_stage", "operator": ">=", "value": 14}
        ]
      },
      "action": {
        "type": "fertilize",
        "urgency": "medium",
        "urgency_score": 65,
        "timing_az": "Meyvə bağlanmasından 2-4 həftə sonra",
        "fertilizers_by_crop": {
          "apple": {
            "root": {"type": "Kalsium nitrat", "amount_kg_per_ha": 175},
            "foliar": {"type": "Bor + Kalsium spreyi", "concentration": "0.3%"}
          },
          "grape": {
            "root": {"type": "Kalium sulfat", "amount_kg_per_ha": 150},
            "foliar": {"type": "Mikroelementlər", "concentration": "0.2%"}
          },
          "pomegranate": {
            "root": {"type": "Kalium sulfat", "amount_kg_per_ha": 125},
            "foliar": {"type": "Kalsium", "note_az": "Çatlamanın qarşısını almaq üçün"}
          }
        }
      },
      "message_az": "Meyvə bağlanıb. Kalium və kalsium gübrələri meyvə keyfiyyətini yaxşılaşdıracaq.",
      "message_en": "Fruit set complete. Potassium and calcium fertilizers will improve fruit quality."
    },
    {
      "rule_id": "ORCH_FERT_003",
      "name_az": "Yığımdan sonra bərpa gübrələməsi",
      "name_en": "Post-harvest recovery fertilization",
      "priority": "medium",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.stage", "operator": "==", "value": "post_harvest"},
          {"field": "crop_context.days_after_harvest", "operator": ">=", "value": 7},
          {"field": "crop_context.days_after_harvest", "operator": "<=", "value": 30}
        ]
      },
      "action": {
        "type": "fertilize",
        "urgency": "medium",
        "urgency_score": 60,
        "timing_az": "Yığımdan 1-4 həftə sonra (yarpaqlar hələ yaşıl ikən)",
        "fertilizers_az": [
          {"type": "Karbamid", "amount_kg_per_ha": 125, "purpose_az": "Yarpaq funksiyasını dəstəkləyir"},
          {"type": "Fosfor gübrəsi", "amount_kg_per_ha": 75, "purpose_az": "Kök inkişafı"}
        ],
        "foliar_az": [
          {"type": "Sink sulfat", "concentration": "0.5%"},
          {"type": "Bor", "concentration": "0.2%"}
        ]
      },
      "message_az": "Yığımdan sonra gübrələmə - ağacın bərpası və növbəti il üçün hazırlıq. Yarpaqlar tökülənə qədər tətbiq edin.",
      "message_en": "Post-harvest fertilization - tree recovery and preparation for next year. Apply before leaf fall."
    },
    {
      "rule_id": "ORCH_FERT_004",
      "name_az": "Üzüm - Veraison dövrü gübrələmə dayandırma",
      "name_en": "Grape - Veraison fertilization stop",
      "priority": "info",
      "enabled": true,
      "applicable_to": ["grape"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.crop_type", "operator": "==", "value": "grape"},
          {"field": "crop_context.stage", "operator": "==", "value": "veraison"}
        ]
      },
      "action": {
        "type": "no_action",
        "urgency": "info",
        "urgency_score": 15
      },
      "message_az": "Veraison dövrü - azot gübrələməsini dayandırın. Əlavə azot şəkər toplanmasını yavaşladır.",
      "message_en": "Veraison period - stop nitrogen fertilization. Additional nitrogen slows sugar accumulation."
    },
    {
      "rule_id": "ORCH_FERT_005",
      "name_az": "Kalsium çatışmazlığı - Alma",
      "name_en": "Calcium deficiency - Apple",
      "priority": "high",
      "enabled": true,
      "applicable_to": ["apple"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.crop_type", "operator": "==", "value": "apple"},
          {"field": "crop_context.stage", "operator": "IN", "value": ["fruit_set", "fruit_development"]},
          {"field": "crop_context.calcium_deficiency_signs", "operator": "==", "value": true}
        ]
      },
      "action": {
        "type": "fertilize",
        "urgency": "high",
        "urgency_score": 80,
        "fertilizer": {
          "type": "Kalsium xlorid yarpaq spreyi",
          "concentration": "0.5%",
          "frequency_az": "7-10 gün intervalla, 3-4 dəfə"
        }
      },
      "message_az": "Kalsium çatışmazlığı əlamətləri. Bitter pit (acı ləkə) qarşısını almaq üçün kalsium spreyi vurun.",
      "message_en": "Calcium deficiency signs. Apply calcium spray to prevent bitter pit.",
      "deficiency_signs_az": [
        "Meyvə ucunda batıq ləkələr",
        "Meyvə ətinin qonurlaşması",
        "Yarpaq kənarlarında yanıq"
      ]
    },
    {
      "rule_id": "ORCH_FERT_006",
      "name_az": "Qış gübrələməsi - Peyin/Kompost",
      "name_en": "Winter fertilization - Manure/Compost",
      "priority": "medium",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.stage", "operator": "==", "value": "dormancy"},
          {"field": "weather.temperature", "operator": "<", "value": 10}
        ]
      },
      "action": {
        "type": "fertilize",
        "urgency": "medium",
        "urgency_score": 50,
        "timing_az": "Dekabr-Fevral",
        "fertilizer": {
          "type": "Çürümüş peyin və ya kompost",
          "amount_kg_per_tree": {"min": 20, "max": 30},
          "method_az": "Tac proyeksiyası altına yayıb torpağa qarışdırın"
        }
      },
      "message_az": "Qış dövrü - üzvi gübrələmə vaxtı. Çürümüş peyin torpaq strukturunu yaxşılaşdırır.",
      "message_en": "Winter period - organic fertilization time. Composted manure improves soil structure."
    }
  ],
  
  "fertilizer_timing_by_crop": {
    "apple": {
      "spring_base": "Mart-Aprel (tumurcuqlanmadan əvvəl)",
      "post_bloom": "May (çiçəkləmədən sonra)",
      "summer": "İyun-İyul (meyvə böyüməsi)",
      "post_harvest": "Sentyabr-Oktyabr"
    },
    "grape": {
      "spring_base": "Mart (tumurcuqlanmadan əvvəl)",
      "pre_bloom": "Aprel-May",
      "post_bloom": "İyun",
      "veraison": "Stop nitrogen",
      "post_harvest": "Oktyabr"
    },
    "pomegranate": {
      "spring_base": "Mart-Aprel",
      "summer": "İyun-İyul",
      "post_harvest": "Noyabr"
    }
  }
}
