  "rules": [
    {
      "rule_id": "ORCH_PEST_001",
      "name_az": "Üzüm - Mildiu (Yalançı Unlu Şeh) riski - Kritik",
      "name_en": "Grape - Downy mildew risk - Critical",
      "priority": "critical",
      "enabled": true,
      "applicable_to": ["grape"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.crop_type", "operator": "==", "value": "grape"},
          {"field": "weather.temperature", "operator": ">=", "value": 18},
          {"field": "weather.temperature", "operator": "<=", "value": 25},
          {"field": "weather.humidity", "operator": ">", "value": 85},
          {"field": "weather.rainfall_last_7days", "operator": ">", "value": 10}
        ]
      },
      "action": {
        "type": "apply_fungicide",
        "urgency": "critical",
        "urgency_score": 95,
        "timing_az": "DƏRHAL, yağışdan əvvəl profilaktik",
        "products_az": [
          {"name": "Bordeaux mayesi (Mis sulfat)", "dose_az": "1-2%"},
          {"name": "Metalaxyl + Mancozeb", "dose_kg_per_ha": 2.5},
          {"name": "Fosetyl-Al", "dose_kg_per_ha": 2}
        ],
        "frequency_az": "7-10 gün interval, yağışdan sonra təkrar"
      },
      "message_az": "MİLDİU RİSKİ KRİTİK! Temperatur {temperature}°C, rütubət {humidity}%, son 7 gündə {rainfall_last_7days}mm yağış. Dərhal fungisid çiləyin!",
      "message_en": "MILDEW RISK CRITICAL! Temperature {temperature}°C, humidity {humidity}%, {rainfall_last_7days}mm rain in 7 days. Apply fungicide IMMEDIATELY!",
      "symptoms_az": [
        "Yarpaq üstündə yağlı sarı ləkələr",
        "Yarpaq altında ağ kif (nəm havada)",
        "Salxımlarda qonur ləkələr",
        "Sürətlə yayılır"
      ]
    },
