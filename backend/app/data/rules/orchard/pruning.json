{
  "version": "1.0.0",
  "category": "pruning",
  "farm_type": "orchard",
  "description": "Meyvə bağı budama qaydaları",
  "last_updated": "2025-12-26",
  
  "rules": [
    {
      "rule_id": "ORCH_PRUNE_001",
      "name_az": "Qış budaması vaxtı",
      "name_en": "Winter pruning time",
      "priority": "high",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.stage", "operator": "==", "value": "dormancy"},
          {"field": "weather.temperature", "operator": ">", "value": -5},
          {"field": "weather.rainfall_forecast_48h", "operator": "==", "value": false}
        ]
      },
      "action": {
        "type": "prune",
        "urgency": "high",
        "urgency_score": 75,
        "timing_by_crop": {
          "apple": "Dekabr - Fevral",
          "grape": "Yanvar - Fevral (şirə axınından əvvəl)",
          "pomegranate": "Dekabr - Yanvar (yüngül budama)",
          "fig": "Yanvar - Fevral"
        }
      },
      "message_az": "Qış budama vaxtıdır. Temperatur {temperature}°C - əlverişli şərait. Şaxtalı günlərdən qaçının.",
      "message_en": "Winter pruning time. Temperature {temperature}°C - favorable conditions. Avoid frosty days.",
      "general_rules_az": [
        "Kəskin, dezinfeksiya olunmuş alətlər istifadə edin",
        "Xəstə budaqları ilk kəsin və YANDIIRIN (kompostlamayın)",
        "Kəsikləri fungisidlə örtün",
        "Tac mərkəzini açın - işıq və hava dövranı üçün"
      ]
    },
    {
      "rule_id": "ORCH_PRUNE_002",
      "name_az": "Şaxtalı gün - Budama qadağası",
      "name_en": "Frosty day - No pruning",
      "priority": "high",
      "enabled": true,
      "conditions": {
        "operator": "OR",
        "items": [
          {"field": "weather.temperature", "operator": "<", "value": -5},
          {"field": "weather.frost_warning", "operator": "==", "value": true}
        ]
      },
      "action": {
        "type": "no_action",
        "urgency": "high",
        "urgency_score": 80
      },
      "message_az": "BUDAMA ETMƏYIN! Temperatur {temperature}°C - şaxtalı havada budama ağaca zərər verir.",
      "message_en": "DO NOT PRUNE! Temperature {temperature}°C - pruning in frost damages trees."
    },
    {
      "rule_id": "ORCH_PRUNE_003",
      "name_az": "Yay yaşıl budaması - Üzüm",
      "name_en": "Summer green pruning - Grape",
      "priority": "medium",
      "enabled": true,
      "applicable_to": ["grape"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.crop_type", "operator": "==", "value": "grape"},
          {"field": "crop_context.stage", "operator": "IN", "value": ["fruit_set", "fruit_development"]}
        ]
      },
      "action": {
        "type": "prune",
        "urgency": "medium",
        "urgency_score": 60,
        "operations_az": [
          {"name": "Zoğ uclarının vurulması (topping)", "purpose_az": "Böyüməni dayandırmaq, meyvəyə enerji yönəltmək"},
          {"name": "Salxım ətrafındakı yarpaqların seyrəldilməsi", "purpose_az": "Meyvəyə işıq düşsün, havalanma"},
          {"name": "Qoltuq zoğlarının çıxarılması", "purpose_az": "Əlavə zoğları kəsmək"}
        ]
      },
      "message_az": "Yay yaşıl budaması vaxtı. Zoğ uclarını vurun, salxım ətrafını seyrəldin.",
      "message_en": "Summer green pruning time. Top shoots, thin leaves around clusters."
    },
    {
      "rule_id": "ORCH_PRUNE_004",
      "name_az": "Yay budaması - Alma",
      "name_en": "Summer pruning - Apple",
      "priority": "medium",
      "enabled": true,
      "applicable_to": ["apple"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.crop_type", "operator": "==", "value": "apple"},
          {"field": "crop_context.stage", "operator": "IN", "value": ["fruit_set", "fruit_development"]}
        ]
      },
      "action": {
        "type": "prune",
        "urgency": "medium",
        "urgency_score": 55,
        "operations_az": [
          {"name": "Su zoğlarının kəsilməsi (suckers)", "purpose_az": "Dik, şaquli zoğları kəsin"},
          {"name": "Həddən artıq sıx budaqların seyrəldilməsi", "purpose_az": "İşıq və hava keçiricilyyi"},
          {"name": "Xəstə/zədəli budaqların çıxarılması", "purpose_az": "Xəstəlik yayılmasının qarşısı"}
        ]
      },
      "message_az": "Yay budaması vaxtı. Su zoğlarını kəsin, tacı seyrəldin. Meyvəyə işıq düşməsini təmin edin.",
      "message_en": "Summer pruning time. Remove water shoots, thin canopy. Ensure light reaches fruit."
    },
    {
      "rule_id": "ORCH_PRUNE_005",
      "name_az": "Sanitariya budaması - Xəstə budaqlar",
      "name_en": "Sanitary pruning - Diseased branches",
      "priority": "critical",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.diseased_branches_present", "operator": "==", "value": true}
        ]
      },
      "action": {
        "type": "prune",
        "urgency": "critical",
        "urgency_score": 90,
        "timing_az": "DƏRHAL - mövsümdən asılı olmayaraq",
        "procedure_az": [
          "Xəstə budağı sağlam toxumadan 15-20 sm aşağıdan kəsin",
          "Hər kəsimdən sonra aləti dezinfeksiya edin (spirt və ya yandırma)",
          "Kəsilmiş budaqları YANDIIRIN",
          "Kəsik yerini fungisidlə örtün"
        ]
      },
      "message_az": "Xəstə budaqlar aşkar edilib. DƏRHAL sanitariya budaması aparın - xəstəlik yayılmasının qarşısını alın!",
      "message_en": "Diseased branches detected. Perform sanitary pruning IMMEDIATELY to prevent spread!"
    },
    {
      "rule_id": "ORCH_PRUNE_006",
      "name_az": "Nar budama xüsusiyyəti",
      "name_en": "Pomegranate pruning specifics",
      "priority": "medium",
      "enabled": true,
      "applicable_to": ["pomegranate"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.crop_type", "operator": "==", "value": "pomegranate"},
          {"field": "crop_context.stage", "operator": "==", "value": "dormancy"}
        ]
      },
      "action": {
        "type": "prune",
        "urgency": "medium",
        "urgency_score": 55,
        "note_az": "Nar həddən artıq budamaya həssasdır - yüngül budama tövsiyə olunur",
        "operations_az": [
          "Kök zoğlarını (pöhrələri) kəsin",
          "Ölmüş/xəstə budaqları çıxarın",
          "Tac mərkəzini yüngülcə açın",
          "Formasiya budamasını minimal saxlayın"
        ]
      },
      "message_az": "Nar budaması - YÜNGÜL olmalıdır. Həddən artıq budama məhsulu azaldır. Yalnız pöhrələri və xəstə budaqları kəsin.",
      "message_en": "Pomegranate pruning - should be LIGHT. Excessive pruning reduces yield. Only remove suckers and diseased branches."
    }
  ],
  
  "pruning_tool_guide": {
