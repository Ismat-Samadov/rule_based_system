{
  "version": "1.0.0",
  "category": "fertilization",
  "farm_type": "vegetable",
  "description": "Tərəvəzçilik gübrələmə qaydaları",
  "last_updated": "2025-12-26",
  
  "rules": [
    {
      "rule_id": "VEG_FERT_001",
      "name_az": "Pomidor - Əkin öncəsi gübrələmə",
      "name_en": "Tomato - Pre-planting fertilization",
      "priority": "high",
      "enabled": true,
      "applicable_to": ["tomato"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.crop_type", "operator": "==", "value": "tomato"},
          {"field": "crop_context.stage", "operator": "==", "value": "pre_planting"}
        ]
      },
      "action": {
        "type": "fertilize",
        "urgency": "high",
        "urgency_score": 75,
        "timing_az": "Əkindən 7-10 gün əvvəl",
        "fertilizer": {
          "type": "NPK 15-15-15",
          "amount_kg_per_dekar": 55
        }
      },
      "message_az": "Əkin öncəsi gübrələmə vaxtı. NPK 15-15-15, dekara 50-60 kq.",
      "message_en": "Pre-planting fertilization time. NPK 15-15-15, 50-60 kg per dekar."
    },
    {
      "rule_id": "VEG_FERT_002",
      "name_az": "Pomidor - Köçürmədən sonra starter",
      "name_en": "Tomato - Post-transplant starter",
      "priority": "high",
      "enabled": true,
      "applicable_to": ["tomato"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.crop_type", "operator": "==", "value": "tomato"},
          {"field": "crop_context.stage", "operator": "==", "value": "seedling"},
          {"field": "crop_context.days_in_stage", "operator": ">=", "value": 10}
        ]
      },
      "action": {
        "type": "fertilize",
        "urgency": "high",
        "urgency_score": 70,
        "fertilizer": {
          "type": "Starter gübrə (yüksək fosfor)",
          "formula": "10-52-10",
          "amount_ml_per_plant": 200,
          "method_az": "Suvarma suyu ilə"
        }
      },
      "message_az": "Starter gübrə vaxtı (köçürmədən 10-14 gün sonra). Yüksək fosforlu gübrə kök inkişafını gücləndirir.",
      "message_en": "Starter fertilizer time (10-14 days after transplant). High phosphorus promotes root development."
    },
    {
      "rule_id": "VEG_FERT_003",
      "name_az": "Pomidor - Çiçəkləmə dövrü gübrə",
      "name_en": "Tomato - Flowering fertilization",
      "priority": "high",
      "enabled": true,
      "applicable_to": ["tomato", "pepper"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.crop_type", "operator": "IN", "value": ["tomato", "pepper"]},
          {"field": "crop_context.stage", "operator": "==", "value": "flowering"}
        ]
      },
      "action": {
        "type": "fertilize",
        "urgency": "high",
        "urgency_score": 75,
        "fertilizer": {
          "root": {"type": "NPK 20-20-20", "amount_kg_per_dekar": 15},
          "foliar": {"type": "Bor əlavəsi", "note_az": "Bor çatışmazlığı çiçək tökülməsinə səbəb olur"}
        }
      },
      "message_az": "Çiçəkləmə dövrü - balanslaşdırılmış NPK + Bor. Bor çatışmazlığı çiçək tökülməsinə səbəb olur!",
      "message_en": "Flowering stage - balanced NPK + Boron. Boron deficiency causes flower drop!"
    },
    {
      "rule_id": "VEG_FERT_004",
      "name_az": "Pomidor - Meyvə dövrü (Kalium)",
      "name_en": "Tomato - Fruiting (Potassium)",
      "priority": "high",
      "enabled": true,
      "applicable_to": ["tomato"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.crop_type", "operator": "==", "value": "tomato"},
          {"field": "crop_context.stage", "operator": "==", "value": "fruiting"}
        ]
      },
      "action": {
        "type": "fertilize",
        "urgency": "high",
        "urgency_score": 80,
        "frequency_az": "2 həftədə bir",
        "fertilizer": {
          "type": "Kalium vurğulanmış",
          "options": ["NPK 15-10-30", "Kalium sulfat"],
          "amount_kg_per_dekar": 35
        }
      },
      "message_az": "Meyvə dövrü - KALİUM vacibdir. Meyvə keyfiyyəti, rəngi və dadını yaxşılaşdırır.",
      "message_en": "Fruiting stage - POTASSIUM essential. Improves fruit quality, color and taste."
    },
    {
      "rule_id": "VEG_FERT_005",
      "name_az": "Kartof - Yumru dövrü (Kalium)",
      "name_en": "Potato - Tuber stage (Potassium)",
      "priority": "high",
      "enabled": true,
      "applicable_to": ["potato"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.crop_type", "operator": "==", "value": "potato"},
          {"field": "crop_context.stage", "operator": "IN", "value": ["tuber_initiation", "tuber_bulking"]}
        ]
      },
      "action": {
        "type": "fertilize",
        "urgency": "high",
        "urgency_score": 75,
        "fertilizer": {
          "type": "Kalium sulfat",
          "amount_kg_per_dekar": 25,
          "note_az": "Kalium xlorid (muriate) istifadə etməyin - nişasta keyfiyyətini aşağı salır"
        }
      },
      "message_az": "Yumru dövrü - Kalium sulfat tövsiyə olunur. Kalium xlorid DEYIL (keyfiyyəti aşağı salır).",
      "message_en": "Tuber stage - Potassium sulfate recommended. NOT potassium chloride (reduces quality)."
    },
    {
      "rule_id": "VEG_FERT_006",
      "name_az": "Xiyar - Müntəzəm azot",
      "name_en": "Cucumber - Regular nitrogen",
      "priority": "medium",
      "enabled": true,
      "applicable_to": ["cucumber"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.crop_type", "operator": "==", "value": "cucumber"},
          {"field": "crop_context.stage", "operator": "IN", "value": ["vegetative", "flowering", "fruiting"]}
        ]
      },
      "action": {
        "type": "fertilize",
        "urgency": "medium",
        "urgency_score": 60,
        "frequency_az": "Həftədə bir (fertiqasiya)",
        "fertilizer": {
          "type": "Azot vurğulanmış",
          "note_az": "Xiyar azota həssasdır, müntəzəm az dozalarda verin"
        }
      },
      "message_az": "Xiyar müntəzəm azot tələb edir. Fertiqasiya (suvarma ilə gübrələmə) ideal metoddur.",
      "message_en": "Cucumber requires regular nitrogen. Fertigation (fertilizing with irrigation) is ideal method."
    },
    {
      "rule_id": "VEG_FERT_007",
      "name_az": "Gübrələmə dayandırma - Yığım öncəsi",
      "name_en": "Fertilization stop - Pre-harvest",
      "priority": "medium",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.days_until_harvest", "operator": "<=", "value": 14}
        ]
      },
      "action": {
        "type": "stop_fertilization",
        "urgency": "medium",
        "urgency_score": 50
      },
      "message_az": "Yığıma {days_until_harvest} gün qalıb. Azot gübrələməsini dayandırın - nitrat yığılmasının qarşısını alır.",
      "message_en": "{days_until_harvest} days until harvest. Stop nitrogen fertilization to prevent nitrate accumulation."
    }
  ],
  
  "fertigation_guide": {
    "definition_az": "Suvarma sistemi vasitəsilə gübrələmə",
    "advantages_az": [
      "Gübrənin daha səmərəli istifadəsi",
      "Az əmək xərci",
      "Dəqiq dozalama",
      "Kök zonasına birbaşa çatdırılma"
    ],
    "setup_az": "Damcı suvarma + gübrə enjektoru/tank"
  }
}
