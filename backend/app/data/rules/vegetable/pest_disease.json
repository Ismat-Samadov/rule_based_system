  "rules": [
    {
      "rule_id": "VEG_DIS_001",
      "name_az": "Fitoftora riski - KRİTİK",
      "name_en": "Late blight risk - CRITICAL",
      "priority": "critical",
      "enabled": true,
      "applicable_to": ["potato", "tomato"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.crop_type", "operator": "IN", "value": ["potato", "tomato"]},
          {"field": "weather.temperature", "operator": ">=", "value": 10},
          {"field": "weather.temperature", "operator": "<=", "value": 25},
          {"field": "weather.humidity", "operator": ">", "value": 85}
        ]
      },
      "action": {
        "type": "apply_fungicide",
        "urgency": "critical",
        "urgency_score": 100,
        "products_az": ["Metalaxyl + Mancozeb", "Mis hidroksid", "Chlorothalonil"],
        "frequency_az": "7 gün interval"
      },
      "message_az": "FİTOFTORA RİSKİ KRİTİK! Dərhal fungisid çiləyin!",
      "message_en": "LATE BLIGHT RISK CRITICAL! Apply fungicide IMMEDIATELY!"
    },
    {
      "rule_id": "VEG_DIS_002",
      "name_az": "Fitoftora riski - Orta",
      "name_en": "Late blight risk - Medium",
      "priority": "high",
      "enabled": true,
      "applicable_to": ["potato", "tomato"],
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.crop_type", "operator": "IN", "value": ["potato", "tomato"]},
          {"field": "weather.humidity", "operator": ">", "value": 75},
          {"field": "weather.humidity", "operator": "<=", "value": 85}
        ]
      },
      "action": {
        "type": "preventive_spray",
        "urgency": "high",
        "urgency_score": 75
      },
      "message_az": "Fitoftora riski var. Profilaktik fungisid tövsiyə olunur.",
      "message_en": "Late blight risk present. Preventive fungicide recommended."
    },
    {
