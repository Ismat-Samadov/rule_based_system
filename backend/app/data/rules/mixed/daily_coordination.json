{
  "version": "1.0.0",
  "category": "daily_coordination",
  "farm_type": "mixed",
  "description": "Qarışıq təsərrüfat gündəlik koordinasiya qaydaları",
  "last_updated": "2025-12-26",
  
  "rules": [
    {
      "rule_id": "MIX_DAY_001",
      "name_az": "Səhər prioritet sırası",
      "name_en": "Morning priority order",
      "priority": "high",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "time_of_day", "operator": "==", "value": "morning"}
        ]
      },
      "action": {
        "type": "schedule",
        "urgency": "high",
        "urgency_score": 80,
        "schedule_az": [
          {"time": "05:00-06:00", "task": "Səhər sağımı", "priority": "must_do", "note_az": "Süd inəkləri - vaxt dəyişməməli"},
          {"time": "06:00-07:00", "task": "Heyvan yemləmə", "priority": "must_do"},
          {"time": "07:00-08:00", "task": "Tövlə təmizliyi", "priority": "must_do"},
          {"time": "08:00-10:00", "task": "Sahə suvarması", "priority": "should_do", "note_az": "Sərin saatlar optimal"}
        ]
      },
      "message_az": "Səhər cədvəli: 1) Sağım (05:00-06:00), 2) Yemləmə (06:00-07:00), 3) Tövlə təmizliyi, 4) Sahə suvarması.",
      "message_en": "Morning schedule: 1) Milking (05:00-06:00), 2) Feeding (06:00-07:00), 3) Barn cleaning, 4) Field irrigation."
    },
    {
      "rule_id": "MIX_DAY_002",
      "name_az": "Günorta istirahət dövrü",
      "name_en": "Midday rest period",
      "priority": "medium",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "time_of_day", "operator": "==", "value": "midday"},
          {"field": "weather.temperature", "operator": ">", "value": 30}
        ]
      },
      "action": {
        "type": "schedule",
        "urgency": "medium",
        "urgency_score": 60,
        "schedule_az": [
          {"time": "10:00-16:00", "task": "Ağır sahə işi tövsiyə olunmur", "priority": "avoid"},
          {"time": "10:00-16:00", "task": "Heyvanlara kölgə/su təmin edin", "priority": "must_do"},
          {"time": "12:00-14:00", "task": "Ofis işləri, planlaşdırma", "priority": "can_do"}
        ]
      },
      "message_az": "Günorta (10:00-16:00): Ağır sahə işindən qaçının. Heyvanlara kölgə/su. Planlaşdırma üçün vaxt.",
      "message_en": "Midday (10:00-16:00): Avoid heavy field work. Provide shade/water for animals. Time for planning."
    },
    {
      "rule_id": "MIX_DAY_003",
      "name_az": "Axşam prioritet sırası",
      "name_en": "Evening priority order",
      "priority": "high",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "time_of_day", "operator": "==", "value": "evening"}
        ]
      },
      "action": {
        "type": "schedule",
        "urgency": "high",
        "urgency_score": 75,
        "schedule_az": [
          {"time": "16:00-18:00", "task": "Sahə işləri (çapa, yığım)", "priority": "should_do"},
          {"time": "17:00-18:00", "task": "Axşam sağımı", "priority": "must_do", "note_az": "Süd inəkləri"},
          {"time": "18:00-19:00", "task": "Axşam yemləmə", "priority": "must_do"},
          {"time": "19:00-20:00", "task": "Sahə yoxlaması", "priority": "should_do"}
        ]
      },
      "message_az": "Axşam cədvəli: 1) Sahə işləri (16:00-18:00), 2) Sağım (17:00-18:00), 3) Yemləmə (18:00-19:00).",
      "message_en": "Evening schedule: 1) Field work (16:00-18:00), 2) Milking (17:00-18:00), 3) Feeding (18:00-19:00)."
    },
    {
      "rule_id": "MIX_DAY_004",
      "name_az": "Konflikt həlli - Sağım vs Suvarma",
      "name_en": "Conflict resolution - Milking vs Irrigation",
      "priority": "high",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "conflict_type", "operator": "==", "value": "milking_irrigation"}
        ]
      },
      "action": {
        "type": "conflict_resolution",
        "urgency": "high",
        "urgency_score": 80,
        "winner": "milking",
        "reason_az": "Sağım vaxtının dəyişməsi süd keyfiyyətinə təsir edir"
      },
      "message_az": "Konflikt: Sağım QALIB. Suvarmanı sağımdan sonra aparın. Süd keyfiyyəti vaxt dəyişməsinə həssasdır.",
      "message_en": "Conflict: Milking WINS. Do irrigation after milking. Milk quality sensitive to schedule changes."
    },
    {
      "rule_id": "MIX_DAY_005",
      "name_az": "Konflikt həlli - Baytar vs Yığım",
      "name_en": "Conflict resolution - Vet visit vs Harvest",
      "priority": "high",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "conflict_type", "operator": "==", "value": "vet_harvest"}
        ]
      },
      "action": {
        "type": "conflict_resolution",
        "urgency": "high",
        "urgency_score": 75,
        "winner": "vet_visit",
        "reason_az": "Baytar viziti planlaşdırılıb, başqa vaxt çətin"
      },
      "message_az": "Konflikt: Baytar viziti QALIB. Yığımı başqa işçiyə həvalə edin və ya təxirə salın (hava şəraiti icazə verərsə).",
      "message_en": "Conflict: Vet visit WINS. Delegate harvest to another worker or postpone if weather permits."
    },
    {
      "rule_id": "MIX_DAY_006",
      "name_az": "Konflikt həlli - Yemləmə vs Pestisid",
      "name_en": "Conflict resolution - Feeding vs Pesticide",
      "priority": "high",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "conflict_type", "operator": "==", "value": "feeding_pesticide"}
        ]
      },
      "action": {
        "type": "conflict_resolution",
        "urgency": "high",
        "urgency_score": 70,
        "winner": "feeding",
        "reason_az": "Heyvan rifahı birinci"
      },
      "message_az": "Konflikt: Yemləmə QALIB. Pestisid çiləməni səhər erkən (şeh quruduqdan sonra) və ya sabaha keçirin.",
      "message_en": "Conflict: Feeding WINS. Postpone pesticide to early morning (after dew dries) or tomorrow."
    },
    {
      "rule_id": "MIX_DAY_007",
      "name_az": "Həftəlik planlaşdırma xatırlatması",
      "name_en": "Weekly planning reminder",
      "priority": "low",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "day_of_week", "operator": "==", "value": "sunday"}
        ]
      },
      "action": {
        "type": "reminder",
        "urgency": "low",
        "urgency_score": 30,
        "checklist_az": [
          "Gələn həftənin hava proqnozu",
          "Yem/gübrə ehtiyatları",
          "Baytar/texnik vizitləri",
          "Bazar/satış planları",
          "Mövsümi işlər (əkin, yığım, peyvənd)"
        ]
      },
      "message_az": "Bazar günü - həftəlik planlaşdırma vaxtı. Hava proqnozu, ehtiyatlar, vizitlər, satış planlarını nəzərdən keçirin.",
      "message_en": "Sunday - weekly planning time. Review weather forecast, supplies, visits, sales plans."
    }
  ],
  
  "conflict_resolution_matrix": {
    "priority_order": [
      {"rank": 1, "task": "Heyvan sağlığı təcili", "examples": ["Doğum", "Xəstəlik", "Yaralanma"]},
      {"rank": 2, "task": "Müntəzəm heyvan baxımı", "examples": ["Sağım", "Yemləmə"]},
      {"rank": 3, "task": "Kritik bitki işləri", "examples": ["Yağışdan əvvəl yığım", "Solma əlamətli suvarma"]},
      {"rank": 4, "task": "Planlanmış vizitlər", "examples": ["Baytar", "Texnik"]},
      {"rank": 5, "task": "Rutin sahə işləri", "examples": ["Normal suvarma", "Çiləmə", "Çapa"]}
    ]
  },
  
  "daily_checklist_template": {
    "morning_az": [
      "☐ Sağım tamamlandı",
      "☐ Bütün heyvanlar yemləndi",
      "☐ Su qabları dolu",
      "☐ Xəstə/yaralı heyvan yoxlaması",
      "☐ Suvarma sistemi yoxlaması"
    ],
    "evening_az": [
      "☐ Axşam sağımı tamamlandı",
      "☐ Axşam yemləmə tamamlandı",
      "☐ Sahə yoxlaması aparıldı",
      "☐ Sabahkı işlər planlandı"
    ]
  }
}
