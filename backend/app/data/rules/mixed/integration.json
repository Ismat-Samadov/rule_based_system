{
  "version": "1.0.0",
  "category": "integration",
  "farm_type": "mixed",
  "description": "Qarışıq təsərrüfat inteqrasiya qaydaları",
  "last_updated": "2025-12-26",
  
  "rules": [
    {
      "rule_id": "MIX_INT_001",
      "name_az": "Peyin kompostlaşdırma qaydası",
      "name_en": "Manure composting rule",
      "priority": "high",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "farm_components.livestock_types", "operator": "NOT_EMPTY", "value": true},
          {"field": "farm_components.crop_types", "operator": "NOT_EMPTY", "value": true}
        ]
      },
      "action": {
        "type": "manure_management",
        "urgency": "high",
        "urgency_score": 70,
        "requirements_az": {
          "composting_duration_months": {"min": 3, "max": 6},
          "composting_temperature": {"min": 55, "max": 65, "note_az": "Patogen məhvi üçün"},
          "mixing_materials_az": "Peyin + saman/ot qalıqları"
        },
        "application_rates_az": {
          "vegetables": {"amount_ton_per_ha": 25, "note_az": "Yalnız kompostlaşmış"},
          "cereals": {"amount_ton_per_ha": 17.5},
          "orchards": {"amount_kg_per_tree": 12.5}
        }
      },
      "message_az": "Peyin idarəetməsi: TƏZƏ peyin istifadə ETMƏYİN! Minimum 3-6 ay kompostlaşdırın. Temperatur 55-65°C-ə çatmalıdır (patogen məhv edilməsi üçün).",
      "message_en": "Manure management: DO NOT use fresh manure! Compost for minimum 3-6 months. Temperature must reach 55-65°C (pathogen destruction).",
      "restrictions_az": [
        "Yarpaq tərəvəzlərdə yığımdan 60 gün əvvəl dayandırın",
        "Meyvələrdə yığımdan 90 gün əvvəl dayandırın",
        "Vegetasiya dövründə tətbiq etməyin - payızda torpağa qarışdırın"
      ]
    },
    {
      "rule_id": "MIX_INT_002",
      "name_az": "Anız otlatma imkanı",
      "name_en": "Stubble grazing opportunity",
      "priority": "medium",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.stage", "operator": "==", "value": "post_harvest"},
          {"field": "farm_components.livestock_types", "operator": "CONTAINS", "value": ["sheep", "cattle", "goat"]}
        ]
      },
      "action": {
        "type": "integration_opportunity",
        "urgency": "medium",
        "urgency_score": 55,
        "benefits_az": [
          "Əlavə yem mənbəyi (xərc qənaəti)",
          "Təbii gübrələmə (peyin sahəyə düşür)",
          "Alaq nəzarəti",
          "Xəstəlik dövrünün qırılması"
        ]
      },
      "message_az": "Yığımdan sonra sahədə otlatma imkanı. Qoyun/mal-qara anızı yeyə bilər, eyni zamanda torpağı gübrələyir.",
      "message_en": "Post-harvest grazing opportunity. Sheep/cattle can graze stubble, simultaneously fertilizing soil."
    },
    {
      "rule_id": "MIX_INT_003",
      "name_az": "Kartof/Pomidor sahəsində otlatma qadağası",
      "name_en": "No grazing on potato/tomato fields",
      "priority": "high",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.crop_type", "operator": "IN", "value": ["potato", "tomato"]},
          {"field": "crop_context.stage", "operator": "==", "value": "post_harvest"}
        ]
      },
      "action": {
        "type": "restriction",
        "urgency": "high",
        "urgency_score": 75
      },
      "message_az": "XƏBƏRDARLIQ: Kartof/pomidor sahəsində heyvan otlatmayın - minimum 3 il! Solanaceae ailəsi bitkiləri zəhərlidir.",
      "message_en": "WARNING: Do not graze animals on potato/tomato fields for minimum 3 years! Solanaceae plants are toxic."
    },
    {
      "rule_id": "MIX_INT_004",
      "name_az": "Bitki qalıqlarından yem",
      "name_en": "Crop residues as feed",
      "priority": "low",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "farm_components.crop_types", "operator": "CONTAINS", "value": ["cabbage", "carrot", "pumpkin"]},
          {"field": "farm_components.livestock_types", "operator": "NOT_EMPTY", "value": true}
        ]
      },
      "action": {
        "type": "integration_opportunity",
        "urgency": "low",
        "urgency_score": 30,
        "safe_residues_az": {
          "cabbage": {"for": ["cattle", "sheep", "goat"], "note_az": "Xarici yarpaqlar"},
          "carrot": {"for": ["cattle", "sheep", "goat", "poultry"], "note_az": "Uclar və xırda köklər"},
          "pumpkin": {"for": ["cattle", "sheep"], "note_az": "Qabıq və toxumlar"}
        },
        "unsafe_residues_az": [
          "Kartof yaşıl hissələri - ZƏHƏRLİ",
          "Pomidor gövdə/yarpaq - ZƏHƏRLİ",
          "Badımcan - ZƏHƏRLİ"
        ]
      },
      "message_az": "Bitki qalıqları yem kimi istifadə oluna bilər. Kələm, yerkökü, balqabaq qalıqları heyvanlara verilə bilər. Kartof/pomidor/badımcan ZƏHƏRLİDİR!",
      "message_en": "Crop residues can be used as feed. Cabbage, carrot, pumpkin residues safe for animals. Potato/tomato/eggplant are TOXIC!"
    },
    {
      "rule_id": "MIX_INT_005",
      "name_az": "Paxlalı bitki rotasiyası",
      "name_en": "Legume crop rotation",
      "priority": "medium",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "crop_context.crop_type", "operator": "==", "value": "wheat"},
          {"field": "crop_context.previous_crop", "operator": "IN", "value": ["clover", "alfalfa", "beans", "peas"]}
        ]
      },
      "action": {
        "type": "fertilization_adjustment",
        "urgency": "medium",
        "urgency_score": 50,
        "nitrogen_reduction_percent": 30
      },
      "message_az": "Paxlalı bitkidən sonra taxıl əkilib. Azot gübrəsini 30% azaldın - paxlalılar torpaqda azot fiksasiya edir.",
      "message_en": "Cereals planted after legumes. Reduce nitrogen fertilizer by 30% - legumes fix nitrogen in soil."
    }
  ],
  
  "synergy_opportunities": {
    "manure_to_crops": {
      "description_az": "Heyvan peyininin bitkilərə gübrə kimi istifadəsi",
      "value_az": "Kimyəvi gübrə xərcini 30-50% azaldır"
    },
    "stubble_grazing": {
      "description_az": "Yığımdan sonra sahədə heyvan otlatma",
      "value_az": "Yem xərci qənaəti + təbii gübrələmə"
    },
    "crop_residue_feed": {
      "description_az": "Bitki qalıqlarının heyvanlara verilməsi",
      "value_az": "Tullantı azaldılması + yem xərci qənaəti"
    }
  }
}
