{
  "version": "1.0.0",
  "category": "resource_allocation",
  "farm_type": "mixed",
  "description": "Qarışıq təsərrüfat resurs bölgüsü qaydaları",
  "last_updated": "2025-12-26",
  
  "rules": [
    {
      "rule_id": "MIX_RES_001",
      "name_az": "Su məhdudiyyəti - Prioritet sırası",
      "name_en": "Water shortage - Priority order",
      "priority": "critical",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "resource_context.water_availability", "operator": "IN", "value": ["limited", "scarce"]}
        ]
      },
      "action": {
        "type": "resource_allocation",
        "urgency": "critical",
        "urgency_score": 95,
        "priority_order": [
          {"rank": 1, "item_az": "Heyvanların içməli suyu", "note_az": "HƏYATİ - azaldıla bilməz"},
          {"rank": 2, "item_az": "Kritik bitki suvarması", "note_az": "Solma əlamətləri olan bitkilər"},
          {"rank": 3, "item_az": "Planlanmış bitki suvarması", "note_az": "Normal inkişaf üçün"},
          {"rank": 4, "item_az": "Tövlə yuyulması", "note_az": "Gigiyena - azaldıla bilər"}
        ]
      },
      "message_az": "SU MƏHDUDDIR. Prioritet sırası: 1) Heyvan içməli suyu, 2) Kritik suvarma, 3) Normal suvarma, 4) Tövlə yuyulması.",
      "message_en": "WATER LIMITED. Priority order: 1) Animal drinking water, 2) Critical irrigation, 3) Normal irrigation, 4) Barn washing."
    },
    {
      "rule_id": "MIX_RES_002",
      "name_az": "Ciddi su qıtlığı - Qurban protokolu",
      "name_en": "Severe water shortage - Sacrifice protocol",
      "priority": "critical",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "resource_context.water_availability", "operator": "==", "value": "scarce"}
        ]
      },
      "action": {
        "type": "emergency_protocol",
        "urgency": "critical",
        "urgency_score": 100,
        "emergency_actions_az": [
          "Yalnız prioritet 1-2-yə su ayırın",
          "Damcı suvarmaya keçin (səmərəli)",
          "Mulçalama tətbiq edin (buxarlanma azalır)",
          "Ən az dəyərli sahələri 'qurban' verin"
        ]
      },
      "message_az": "CİDDİ SU QITLIĞI. Bəzi sahələri qurban verməli ola bilərsiniz. Heyvanlara su dayandırıla bilməz!",
      "message_en": "SEVERE WATER SHORTAGE. You may need to sacrifice some fields. Animal water cannot be stopped!"
    },
    {
      "rule_id": "MIX_RES_003",
      "name_az": "Əmək məhdudiyyəti - İş prioriteti",
      "name_en": "Labor shortage - Work priority",
      "priority": "high",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "resource_context.labor_availability", "operator": "==", "value": "limited"}
        ]
      },
      "action": {
        "type": "resource_allocation",
        "urgency": "high",
        "urgency_score": 75,
        "priority_order": [
          {"rank": 1, "item_az": "Sağım (süd heyvanları)", "note_az": "Vaxtında olmalı - süd keyfiyyəti"},
          {"rank": 2, "item_az": "Heyvan yemləmə", "note_az": "Rifah üçün vacib"},
          {"rank": 3, "item_az": "Kritik sahə işləri", "note_az": "Yığım, təcili suvarma"},
          {"rank": 4, "item_az": "Rutin sahə işləri", "note_az": "Təxirə salına bilər"}
        ]
      },
      "message_az": "Əmək məhduddur. Heyvan baxımı birincidir (sağım, yemləmə). Sahə işləri ikinci.",
      "message_en": "Labor limited. Animal care first (milking, feeding). Field work second."
    },
    {
      "rule_id": "MIX_RES_004",
      "name_az": "Maliyyə məhdudiyyəti - Xərc prioriteti",
      "name_en": "Financial constraint - Cost priority",
      "priority": "medium",
      "enabled": true,
      "conditions": {
        "operator": "AND",
        "items": [
          {"field": "resource_context.financial_status", "operator": "==", "value": "tight"}
        ]
      },
      "action": {
        "type": "cost_optimization",
        "urgency": "medium",
        "urgency_score": 60,
        "recommendations_az": [
          "Peyin gübrəsinə keçin (kimyəvi əvəzinə)",
          "İnteqrə zərərverici idarəetməsi (IPM)",
          "Öz toxumunuzu saxlayın",
          "Kooperativ alış-veriş (gübrə, yem)"
        ]
      },
      "message_az": "Maliyyə sıxıntısı. Qarışıq təsərrüfat üstünlüklərindən istifadə edin: peyin gübrəsi, bitki qalıqları yem kimi.",
      "message_en": "Financial constraint. Utilize mixed farm advantages: manure fertilizer, crop residues as feed."
    },
    {
      "rule_id": "MIX_RES_005",
      "name_az": "Mövsümi pik iş yükü planlaması",
      "name_en": "Seasonal peak workload planning",
      "priority": "medium",
      "enabled": true,
      "conditions": {
        "operator": "OR",
        "items": [
          {"field": "crop_context.stage", "operator": "IN", "value": ["harvest", "planting"]},
          {"field": "livestock_context.reproductive_stage", "operator": "IN", "value": ["lambing", "calving"]}
        ]
      },
      "action": {
        "type": "planning_alert",
        "urgency": "medium",
        "urgency_score": 65,
        "recommendations_az": [
          "Əlavə işçi tutun (mövsümi)",
          "Qonşularla iş mübadiləsi",
          "Əsas işləri təxirə salmayın",
          "Avtomatlaşdırma imkanlarını düşünün"
        ]
      },
      "message_az": "Pik iş yükü dövrü yaxınlaşır. Əlavə işçi və ya köməkçi planlaşdırın.",
      "message_en": "Peak workload period approaching. Plan additional labor or helpers."
    }
  ],
  
